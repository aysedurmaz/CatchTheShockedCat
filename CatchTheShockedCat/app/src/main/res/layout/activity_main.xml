<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="395dp"
        android:layout_height="459dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.604">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:clickable="true"

            android:focusable="true"
            android:onClick="increaseScore"
            android:rotationX="-28"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/catcat" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:clickable="true"

            android:focusable="true"
            android:onClick="increaseScore"
            android:rotation="24"
            android:rotationX="1"
            android:rotationY="-20"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/catcat" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="increaseScore"
            android:rotation="-57"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/catcat" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="increaseScore"
            android:rotation="-18"
            android:rotationX="-11"
            android:rotationY="-24"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/catcat" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="increaseScore"
            android:rotation="9"
            android:rotationX="-16"
            android:rotationY="-24"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/catcat" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:onClick="increaseScore"
            android:rotation="-20"
            android:rotationX="-16"
            android:rotationY="-22"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/catcat" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:onClick="increaseScore"

            android:rotation="-28"
            android:rotationX="-28"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/catcat" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:onClick="increaseScore"
            android:rotation="-7"
            android:rotationX="-14"
            android:rotationY="18"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/catcat" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="130dp"
            android:layout_height="151dp"
            android:onClick="increaseScore"

            android:rotation="-30"
            android:rotationX="9"
            android:rotationY="-32"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/catcat" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#736A6A"
        android:text="Catch the shocked cat, get the point!"
        android:textColor="#F3DEDE"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Time : 15"
        android:textColor="#070707"
        android:textColorHint="#9C27B0"
        android:textDirection="firstStrongRtl"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_marginTop="6dp"
        android:text="SCORE : 0"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>